{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/sync",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "NOTION_TOKEN": "@notion_token",
    "NOTION_DATABASE_ID": "@notion_database_id",
    "SYNC_AUTH_TOKEN": "@sync_auth_token"
  }
} 