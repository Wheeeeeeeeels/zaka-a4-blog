{
  "name": "hexo-theme-a4",
  "version": "1.9.8",
  "private": false,
  "description": "A hexo theme that looks like an A4 paper.",
  "scripts": {
    "build": "hexo generate",
    "vercel-build": "npm run build",
    "npm:publish": "npm publish",
    "format": "prettier --write ./source/js/*.js ./scripts ",
    "lint:style": "stylelint --fix ./source/css",
    "git:push": "git push --tag && git push -u origin dev",
    "git:add": "npm run lint:style && git add .",
    "notion:sync": "node scripts/notion-sync.js",
    "deploy": "hexo clean && hexo generate && hexo deploy"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "dotenv": "^16.3.1",
    "hexo": "^7.0.0",
    "hexo-cli": "^4.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HiNinojay/hexo-theme-A4.git"
  },
  "keywords": [
    "hexo",
    "theme",
    "A4",
    "simple",
    "pure",
    "powerful",
    "hexo-theme",
    "blog"
  ],
  "author": "Nino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HiNinojay/hexo-theme-A4/issues"
  },
  "homepage": "https://github.com/HiNinojay/hexo-theme-A4#readme",
  "main": "_config.yml"
}
